}
<h1>Opret Begivenhed</h1>
<div class="row">
    <div class="col-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Begivenhed.Navn" class="control-label"></label>
                <input asp-for="@Model.Begivenhed.Navn" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Begivenhed.Varrighed" class="control-label"></label>
                <input asp-for="@Model.Begivenhed.Varrighed" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Begivenhed.Beskrivelse" class="control-label"></label>
                <input asp-for="@Model.Begivenhed.Beskrivelse" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Begivenhed.Location" class="control-label"></label>
                <input asp-for="@Model.Begivenhed.Location" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
