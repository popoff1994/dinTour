@page
@model dinTour.Pages.Events.OpretBegivenhedModel
@{
}
<h1 class="outlinetext" style="color: gray" >Opret Begivenhed</h1>
<div class="row">
    <div class="col-4">
        <form method="post">
            <div class="form-group">
                <label style="color: gray" asp-for="@Model.Begivenhed.Navn" class="control-label outlinetext"></label>
                <input asp-for="@Model.Begivenhed.Navn" class="form-control"/>
            </div>
            <div class="form-group">
                <label style="color: gray" asp-for="@Model.Begivenhed.StartTime" class="control-label outlinetext"></label>
                <input asp-for="@Model.Begivenhed.StartTime" class="form-control"/>
            </div>
            <div class="form-group">
                <label style="color: gray" asp-for="@Model.Begivenhed.EndTime" class="control-label outlinetext"></label>
                <input asp-for="@Model.Begivenhed.EndTime" class="form-control"/>
            </div>
            <div class="form-group">
                <label style="color: gray" asp-for="@Model.Begivenhed.Beskrivelse" class="control-label outlinetext"></label>
                <input asp-for="@Model.Begivenhed.Beskrivelse" class="form-control"/>
            </div>
            <div class="form-group">
                <label style="color: gray" asp-for="@Model.Begivenhed.Location" class="control-label outlinetext"></label>
                <input asp-for="@Model.Begivenhed.Location" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-light" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="outlinetext" asp-page="/Events/GetEvents">Tilbage til Opslagstavle</a>
</div>